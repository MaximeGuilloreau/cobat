{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        {#<ol class="breadcrumb">#}
            {#<li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>#}
            {#<li class="active">Here</li>#}
        {#</ol>#}

        <h1>{{ 'site.create.label' | trans }}</h1>
    </section>

    <section class="content">
        <div class="box" >
            <div class="box-body" >
                {{ form_start(form) }}
                <div class="form-group" >
                    {{ form_errors(form.name) }}
                    {{ form_label(form.name, 'site.name.label' | trans) }}
                    {{ form_widget(form.name, {attr: {class: "form-control"}}) }}
                </div>

                <div class="form-group" >
                    {{ form_errors(form.user) }}
                    {{ form_label(form.user, 'site.user.label' | trans) }}
                    {{ form_widget(form.user, {attr: {class: "form-control"}}) }}
                </div>

                <div class="form-group" >
                    {{ form_errors(form.workers) }}
                    {{ form_label(form.workers, 'site.workers.label' | trans) }}
                    {{ form_widget(form.workers, {attr: {class: "form-control"}}) }}
                </div>

                <input class="btn btn-success" type="submit" value="{{ 'save.label' | trans }}" />
                <a class="btn btn-primary" href="{{ path('site_index') }}">{{ 'back_to_list.label' | trans }}</a>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
