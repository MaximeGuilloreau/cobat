{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        {#<ol class="breadcrumb">#}
            {#<li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>#}
            {#<li class="active">Here</li>#}
        {#</ol>#}

        <h1>
            Modifier le chantier
        </h1>
    </section>

    <section class="content">
        <div class="box" >
            <div class="box-body" >

                {{ form_start(edit_form) }}
                <div class="form-group" >
                    {{ form_errors(edit_form.name) }}
                    {{ form_label(edit_form.name, 'site.name.label' | trans) }}
                    {{ form_widget(edit_form.name, {attr: {class: "form-control"}}) }}
                </div>

                <div class="form-group" >
                    {{ form_errors(edit_form.user) }}
                    {{ form_label(edit_form.user, 'site.user.label' | trans) }}
                    {{ form_widget(edit_form.user, {attr: {class: "form-control"}}) }}
                </div>


                <div class="form-group" >
                    {{ form_errors(edit_form.workers) }}
                    {{ form_label(edit_form.workers, 'site.workers.label' | trans) }}
                    {{ form_widget(edit_form.workers, {attr: {class: "form-control"}}) }}
                </div>

                <input class="btn btn-success" type="submit" value="{{ 'edit.label' | trans }}" />
                <a class="btn btn-primary" href="{{ path('site_index') }}">{{ 'back_to_list.label' | trans }}</a>
                {{ form_end(edit_form) }}

                {{ form_start(delete_form) }}
                <input class="btn btn-danger"  type="submit" value="{{ 'delete.label' | trans }}">
                {{ form_end(delete_form) }}


            </div>
        </div>
    </section>
{% endblock %}
