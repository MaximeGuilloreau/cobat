{% extends 'base.html.twig' %}

{% block body %}
    <h1>Site edit</h1>

    {{ form_start(edit_form) }}
        <div class="form-group" >
            {{ form_errors(edit_form.name) }}
            {{ form_label(edit_form.name) }}
            {{ form_widget(edit_form.name, {attr: {class: "form-control"}}) }}
        </div>

        <div class="form-group" >
            {{ form_errors(edit_form.workers) }}
            {{ form_label(edit_form.workers) }}
            {{ form_widget(edit_form.workers, {attr: {class: "form-control"}}) }}
        </div>
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('site_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
