{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sites list</h1>
    <table class="table" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ path('site_show', { 'id': site.id }) }}">{{ site.id }}</a></td>
                <td>{{ site.name }}</td>
                <td>
                    <a class="btn" href="{{ path('site_show', { 'id': site.id }) }}">show</a>
                    <a class="btn" href="{{ path('site_edit', { 'id': site.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn" href="{{ path('site_new') }}">Create a new site</a>
        </li>
    </ul>
{% endblock %}
