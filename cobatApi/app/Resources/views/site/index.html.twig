{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        {#<ol class="breadcrumb">#}
            {#<li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>#}
            {#<li class="active">Here</li>#}
        {#</ol>#}

        <h1>
            {{ 'site.list.label' | trans }}
            <a class="btn btn-primary" href="{{ path('site_new') }}">{{ 'site.create.label' | trans }}</a>
        </h1>
    </section>

    <section class="content">
        <div class="box" >
            <div class="box-body" >
                <table class="table" >
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{ 'site.name.label' | trans }}</th>
                        <th>{{ 'actions.label' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for site in sites %}
                        <tr>
                            <td><a href="{{ path('site_show', { 'id': site.id }) }}">{{ site.id }}</a></td>
                            <td>{{ site.name }}</td>
                            <td>
                                <div class="btn-group" >
                                    <a class="btn btn-info btn-sm" href="{{ path('site_show', { 'id': site.id }) }}">{{ 'show.label' | trans }}</a>
                                    <a class="btn btn-warning btn-sm" href="{{ path('site_edit', { 'id': site.id }) }}">{{ 'edit.label' | trans }}</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <ul>
                    <li>
                        <a class="btn btn-primary" href="{{ path('site_new') }}">{{ 'site.create.label' | trans }}</a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
{% endblock %}
