{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        {#<ol class="breadcrumb">#}
        {#<li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>#}
        {#<li class="active">Here</li>#}
        {#</ol>#}

        <h1>
            {{ 'user.edit.label' | trans }}
        </h1>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-body">
                {{ form_start(edit_form) }}
                <div class="form-group" >
                    {{ form_errors(edit_form.email) }}
                    {{ form_label(edit_form.email) }}
                    {{ form_widget(edit_form.email, {attr: {class: "form-control"}}) }}
                </div>

                <div class="form-group" >
                    {{ form_errors(edit_form.username) }}
                    {{ form_label(edit_form.username) }}
                    {{ form_widget(edit_form.username, {attr: {class: "form-control"}}) }}
                </div>

                <div class="form-group">
                    {{ form_errors(edit_form.password) }}
                    {{ form_label(edit_form.password) }}
                    {{ form_widget(edit_form.password, {attr: {class: "form-control"}}) }}
                </div>

                <div class="form-group">
                    {{ form_errors(edit_form.sites) }}
                    {{ form_label(edit_form.sites) }}
                    {{ form_widget(edit_form.sites, {attr: {class: "form-control"}}) }}
                </div>

                <input class="btn btn-success" type="submit" value="{{ 'edit.label' | trans }}"/>
                <a class="btn btn-primary" href="{{ path('user_index') }}">{{ 'back_to_list.label' | trans }}</a>
                {{ form_end(edit_form) }}


                {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="{{ 'delete.label' | trans }}">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </section>
{% endblock %}
