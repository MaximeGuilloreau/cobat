{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        {#<ol class="breadcrumb">#}
        {#<li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>#}
        {#<li class="active">Here</li>#}
        {#</ol>#}

        <h1>
            {{ 'user.list.label' | trans }}
            <a class="btn btn-primary" href="{{ path('user_new') }}">{{ 'user.create.label' | trans }}</a>
        </h1>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Salt</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.salt }}</td>
                            <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
                            <td>
                                <div class="btn-group" >
                                    <a class="btn btn-info btn-sm" href="{{ path('user_show', { 'id': user.id }) }}">{{ 'show.label' | trans }}</a>
                                    <a class="btn btn-warning btn-sm" href="{{ path('user_edit', { 'id': user.id }) }}">{{ 'edit.label' | trans }}</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a class="btn btn-primary" href="{{ path('user_new') }}">{{ 'user.create.label' | trans }}</a>
                    </li>
                </ul>
            </div>
        </div>
    </section>

{% endblock %}
